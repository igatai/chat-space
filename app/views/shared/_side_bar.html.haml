.side_bar
  .side_bar__user
    .side_bar__user__top_items
      %h3.side_bar__user__top_items__text
        = current_user.name
      .side_bar__user__top_items__icon
        =link_to new_group_path do
          = icon('fas',' fa-edit',class: "side_bar__user__top_items__icon__edit")
        =link_to edit_user_path(current_user) do
          = icon('fas',' fa-cog',class: "side_bar__user__top_items__icon__cog")
  .side_bar__group
    - current_user.groups.each do |group|
      = link_to group_message_path(group),class: 'side_bar__group__list' do
        .side_bar__group__list__name
          = group.name
        .side_bar__group__list__content
          メッセージはまだありません
