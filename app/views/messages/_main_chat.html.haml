.chat_main
  .chat_main__group_info
    .chat_main__group_info__head
      %p.chat_main__group_info__head__title
        = @group.name
      .chat_main__group_info__head__list
        %p.chat_main__group_info__head__list__member
          member : 
        .chat_main__group_info__head__list__name
          - @group.users.each do |user|
            = user.name

    .chat_main__group_info__tail
      =link_to edit_group_path(@group), class: "chat_main__group_info__tail__btn" do
        edit

  .chat_main__lists
    = render @messages

  .chat_main__form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'chat_main__form__input_box', placeholder: 'type a message'
      .chat_main__form__mask
        = f.label :image, class: 'chat_main__form__mask__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'chat_main__form__submit'
