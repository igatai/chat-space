.chat_main__lists__message
  .chat_main__lists__message__info
    .chat_main__lists__message__info__user_name
      = message.user.name
    .chat_main__lists__message__info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat_main__lists__message__content
    - if message.content.present?
      %p
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
